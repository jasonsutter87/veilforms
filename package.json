{
  "name": "veilforms",
  "version": "1.0.0",
  "description": "Privacy-first form builder with client-side encryption",
  "main": "src/client/veilforms.js",
  "type": "module",
  "scripts": {
    "dev": "hugo server -D",
    "build": "hugo --minify",
    "build:sdk": "esbuild src/client/veilforms.js --bundle --minify --outfile=static/js/veilforms.min.js --format=iife --global-name=VeilForms",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:all": "npm test && cd netlify/functions && npm test"
  },
  "keywords": [
    "forms",
    "privacy",
    "encryption",
    "gdpr",
    "zero-trust"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@netlify/blobs": "^7.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
